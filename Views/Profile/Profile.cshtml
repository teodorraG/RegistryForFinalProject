@model RegistryForFinalProject.Models.ViewModels.ProfileViewModel
@using RegistryForFinalProject.Enums;
@{
    ViewData["Title"] = "Personal Profile";
}

<h1>Personal Profile</h1>
<br />
<form asp-controller="Profile">
    @if (ViewData["LoginError"] != null)
    {
        <p class="text-danger">@ViewData["LoginError"]</p>
    }
    @*<div class="card">
        <div class="card-body">
            This is some text within a panel body.
        </div>
    </div>*@

<div class="card">
    <div class="card-body">
        <div class="p-3 mb-2 bg-secondary text-white"><h6>Information:</h6></div>
            <label action="/Profile/Profile" asp-for="FirstName">First name: </label>
            <span class="text-danger">@Html.ValidationMessageFor(m => m.FirstName)</span>
            <input asp-for="FirstName" class="form-control inputSizeTwenty" />

            <label action="/Profile/Profile" asp-for="LastName">Last name: </label>
            <span class="text-danger">@Html.ValidationMessageFor(m => m.LastName)</span>
            <input asp-for="LastName" class="form-control inputSizeTwenty" />

            <label action="/Profile/Profile" asp-for="Address">Address: </label>
            <span class="text-danger">@Html.ValidationMessageFor(m => m.Address)</span>
            <input asp-for="Address" class="form-control inputSizeTwenty" />
            <br />
            <h6>Gender:</h6>
            @Html.DropDownListFor(m => m.Gender,
                        new SelectList(Enum.GetValues(typeof(Gender))),
                        "Select Gender")
            <br />
        </div>
    <div class="card-body">
        <div class="p-3 mb-2 bg-secondary text-white"><h6>Change your password:</h6></div>
            <label action="/Profile/Profile" asp-for="NewPassword">Current password: </label>
            <span class="text-danger">@Html.ValidationMessageFor(m => m.NewPassword)</span>
            <input asp-for="NewPassword" class="form-control inputSizeTwenty" type="password" />

            <label asp-for="ConfirmNewPassword" action="/Profile/Profile">New password: </label>
            <span class="text-danger">@Html.ValidationMessageFor(m => m.ConfirmNewPassword)</span>
            <input asp-for="ConfirmNewPassword" class="form-control inputSizeTwenty" type="password" />
        </div>
    <div class="card-body">
        <div class="p-3 mb-2 bg-secondary text-white"><h6>Items: </h6></div>
            <br />
            <a href="/Profile/Orders" class="orders">View your orders</a>
            <br />
            <br />
            <a href="/Profile/Offers" class="offers">View your offers</a>
        </div>
        <br />
    </div>
        <button type="submit" class="btn btn-warning btn-lg" id="ExitButton">Save</button>
    
</form>
<script src="~/js/site.js"></script>

@section MainNavigation {

    @if (HttpContextAccessor.HttpContext.Session.GetString("CurrentUser") != null)
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Registry" asp-action="Registry">Registry</a>
        </li>
    }
}

@section AccountNavigation {
    @if (HttpContextAccessor.HttpContext.Session.GetString("CurrentUser") != null)
    {
        <li>
            <a class="nav-link text-dark" asp-area="" asp-controller="Profile" asp-action="Profile"> My Profile</a>
        </li>
        <li>
            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="LogOut">Log out</a>
        </li>

    }
    else
    {
        <li>
            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="LogIn">Log in</a>
        </li>
        <li>
            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
        </li>
    }
}