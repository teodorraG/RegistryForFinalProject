@model RegistryForFinalProject.Models.ViewModels.BirthdayRegistryViewModel
@{
    ViewData["Title"] = "Birthday Registry";
}

<h1>Birthday Registry</h1>
<hr />
<h3>Please fill out the form ...</h3>
<form asp-controller="Registry">
    <label action="/Registry/BirthdayRegistry" asp-for="Name"><span class="text-danger">*</span> Name: </label>
    <span class="text-danger">@Html.ValidationMessageFor(m => m.Name)</span>
    <input asp-for="Name" class="form-control" />

    <label action="/Registry/BirthdayRegistry" asp-for="City"><span class="text-danger">*</span> Location of Event: </label>
    <span class="text-danger">@Html.ValidationMessageFor(m => m.City)</span>
    <input asp-for="City" class="form-control" />

    <label action="/Registry/BirthdayRegistry" asp-for="DateOfEvent"><span class="text-danger">*</span> Date of Event: </label>
    <span class="text-danger">@Html.ValidationMessageFor(m => m.DateOfEvent)</span>
    <input asp-for="DateOfEvent" class="form-control" />
    <br />
    <br />
    <button type="submit" class="btn-primary" id="RegistryButton">Create Registry</button>
    <br />
    <br />
    <h4>or</h4>
    <br />
    <button type="submit" class="btn-primary" id="RegistryButton">Find Registry</button>
</form>

@section MainNavigation {

    @if (HttpContextAccessor.HttpContext.Session.GetString("CurrentUser") != null)
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Registry" asp-action="Registry">Registry</a>
        </li>
    }
}

@section AccountNavigation {
    @if (HttpContextAccessor.HttpContext.Session.GetString("CurrentUser") != null)
    {
        <li>
            <a class="nav-link text-dark" asp-area="" asp-controller="Profile" asp-action="Profile"> My Profile</a>
        </li>
        <li>
            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="LogOut">Log out</a>
        </li>

    }
    else
    {
        <li>
            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="LogIn">Log in</a>
        </li>
        <li>
            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
        </li>
    }
}