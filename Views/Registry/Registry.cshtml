@{
    ViewData["Title"] = "Registry";
}
<h1>@ViewData["Title"]</h1>

<form asp-controller="Registry">
    <br />
    <br />
    <br />

    <div id="registry">
        @*<button type="submit" class="btn-primary RegistryTypes" id="RegistryButton">Baby christening registry</button>
            <button type="submit" class="btn-primary RegistryTypes" id="RegistryButton">Wedding registry</button>*@
        <div class="bigButton">
            @*<input type="button" style="width:200px;" class="btn-primary RegistryTypes" value="Baby christening registry" />*@
            <button href="Registry/BabyRegistry" class="btn-primary RegistryTypes" type="submit" asp-action="BabyRegistry" formmethod="get">Baby christening registry</button>
        </div>
        <div class="bigButton">
            @*<input type="button" style="width:200px;" class="btn-primary RegistryTypes" value="Wedding registry" />*@
            <button href="Registry/WeddingRegistry" class="btn-primary RegistryTypes" asp-action="WeddingRegistry" formmethod="get">Wedding registry</button>
        </div>
        <div class="bigButton">
            @*<input type="button" style="width:200px;" class="btn-primary RegistryTypes" value="Birthday registry" />*@
            <button href="Registry/BirthdayRegistry" class="btn-primary RegistryTypes" asp-action="BirthdayRegistry" formmethod="get">Birthday registry</button>
        </div>



    </div>

</form>
<script src="~/js/site.js"></script>

@section MainNavigation {

    @if (HttpContextAccessor.HttpContext.Session.GetString("CurrentUser") != null)
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Registry" asp-action="Registry">Registry</a>
        </li>
    }
}

@section AccountNavigation {
    @if (HttpContextAccessor.HttpContext.Session.GetString("CurrentUser") != null)
    {
        <li>
            <a class="nav-link text-dark" asp-area="" asp-controller="Profile" asp-action="Profile"> My Profile</a>
        </li>
        <li>
            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="LogOut">Log out</a>
        </li>

    }
    else
    {
        <li>
            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="LogIn">Log in</a>
        </li>
        <li>
            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
        </li>
    }
}