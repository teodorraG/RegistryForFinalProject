@{
    ViewData["Title"] = "Registry";
}

<div class="textJs">
    <h1 class="ml11">
        <span class="text-wrapper">
            <span class="line line1"></span>
            <span class="letters">Select event...</span>
        </span>
    </h1>
</div>

<form asp-controller="Registry">
    @if (this.TempData["SuccessfullyCreatedRegistry"] != null)
    {
        <div class="alert alert-success">@this.TempData["SuccessfullyCreatedRegistry"]</div>
    }
    @if (this.TempData["NotFoundRegistry"] != null)
    {
        <div class="alert alert-danger">@this.TempData["NotFoundRegistry"]</div>
    }
    @if (this.TempData["NotFoundRegistryForm"] != null)
    {
        <div class="alert alert-danger">@this.TempData["NotFoundRegistryForm"]</div>
    }
    <br />
    <br />
    <br />

    <div id="registry" class="row">
        <div class="card col-md" style="width: 30rem;">
            <div class="img-hover-zoom">
                <a class="navbar-brand" asp-area="" asp-controller="Registry" asp-action="BabyRegistry"><img src="http://res.cloudinary.com/teodorascloud/image/upload/mxsxgqdndnsvzyiknrnd.jpg" class="card-img-top img-thumbnail" alt="baby"></a>
            </div>
            <div class="card-body">
                <p class="card-text font-italic font-weight-bold text-center">Baby baptism registry</p>
                <div class="text-center"><a href="BabyRegistry" class="btn btn-warning"><span class="text-center">Go!</span></a></div>
            </div>
        </div>

        <div class="card col-md" style="width: 30rem;">
            <div class="img-hover-zoom">
                <a class="navbar-brand" asp-area="" asp-controller="Registry" asp-action="WeddingRegistry"><img src="http://res.cloudinary.com/teodorascloud/image/upload/jvfe1ixxfvoiq0465trp.jpg" class="card-img-top img-thumbnail" alt="wedding"></a>
            </div>
            <div class="card-body">
                <p class="card-text font-italic font-weight-bold text-center">Wedding registry</p>
                <div class="text-center"><a href="WeddingRegistry" class="btn btn-warning"><span class="text-center">Go!</span></a></div>
            </div>
        </div>

        <div class="card col-md" style="width: 30rem;">
            <div class="img-hover-zoom">
                <a class="navbar-brand" asp-area="" asp-controller="Registry" asp-action="BirthdayRegistry"><img src="http://res.cloudinary.com/teodorascloud/image/upload/nuyjcb8nqdskfwtbdubl.jpg" class="card-img-top img-thumbnail" alt="bday"></a>
            </div>
            <div class="card-body">
                <p class="card-text font-italic font-weight-bold text-center">Birthday registry</p>
                <div class="text-center"><a href="BirthdayRegistry" class="btn btn-warning"><span class="text-center">Go!</span></a></div>
            </div>
        </div>
    </div>
</form>



@section MainNavigation {

    @if (HttpContextAccessor.HttpContext.Session.GetString("CurrentUser") != null)
    {
        <li class="nav-item">
            <a class="nav-link text-light" asp-area="" asp-controller="Registry" asp-action="Registry">Registry</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-light" asp-area="" asp-controller="Categories" asp-action="Categories">Buy</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-light" asp-area="" asp-controller="Sell" asp-action="Sell">Sell</a>
        </li>
    }
}

@section AccountNavigation {
    @if (HttpContextAccessor.HttpContext.Session.GetString("CurrentUser") != null)
    {
        <li>
            <a class="nav-link text-light" asp-area="" asp-controller="Profile" asp-action="Profile" data-toggle="tooltip" data-placement="top" title="Profile"><i class="fas fa-user-circle fa-2x warning"></i></a>
        </li>
        <li>
            <a class="nav-link text-light" asp-area="" asp-controller="ShoppingCart" asp-action="ShoppingCart" data-toggle="tooltip" data-placement="top" title="Shopping Cart"><i class="fas fa-shopping-cart fa-2x warning"></i></a>
        </li>
        <li>
            <a class="nav-link text-light" asp-area="" asp-controller="Account" asp-action="LogOut" data-toggle="tooltip" data-placement="top" title="Sign out"><i class="fas fa-sign-out-alt fa-2x"></i></a>
        </li>

    }
    else
    {
        <li>
            <a class="nav-link text-light" asp-area="" asp-controller="Account" asp-action="LogIn">Sign in</a>
        </li>
        <li>
            <a class="nav-link text-light" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
        </li>
    }
}

<script src="https://cdnjs.cloudflare.com/ajax/libs/animejs/2.0.2/anime.min.js"></script>
<script src="~/js/pageTitle.js"></script>
