@{
    ViewData["Title"] = "About";
}

<form asp-controller="Home">
    @*<h1 class="ml3">About</h1>*@
    <h1 class="ml11">
        <span class="text-wrapper">
            <span class="line line1"></span>
            <span class="letters">About</span>
        </span>
    </h1>
</form>
<hr />
<br />
<br />
<br />
<div class="row">
    <div class="col-md-1">
    </div>
    <div class="col-md-2">
        <i class="fas fa-gift fa-8x warning"></i>
    </div>
    <div class="col-md-2">
        <i class="fas fa-arrow-right fa-8x text-secondary"></i>
    </div>
    <div class="col-md-2">
        <i class="fas fa-shopping-cart fa-8x warning"></i>
    </div>
    <div class="col-md-2">
        <i class="fas fa-arrow-right fa-8x text-secondary"></i>
    </div>
    <div class="col-md-2">
        <i class="fas fa-home fa-8x warning"></i>
    </div>
    <div class="col-md-1">
    </div>
</div>
<br />
<br />
<br />
<br />
