@model RegistryForFinalProject.Models.ViewModels.CategoriesViewModel

@{
    ViewData["Title"] = "Buy";
}

<form asp-controller="Categories">
    <div class="row">
        <div class="col-md-4">
            <div class="dropdown">
                <button class="btn btn-warning dropdown-toggle w-100" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Category list
                </button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    @for (int i = 0; i < Model.Categories.Count; i++)
                    {
                        <a class="dropdown-item" href="#">@Model.Categories[i].Name</a>

                    }
                </div>
            </div>

        </div>

        <div class="col-md-4">
            <label for="customRange1">Price range:</label>
            <div class="row">
                <div class="col-10">
                    <input type="range" class="custom-range" name="ageInputName" id="ageInputId" min="1" max="10000" value="10000" oninput="ageOutputId.value = ageInputId.value">
                </div>
                <div class="col-2">
                    <output name="ageOutputName" id="ageOutputId">10000</output>
                </div>
            </div>
        </div>

        <div class="col-md-1">
            <button class="btn btn-success" id="filterButton" type="submit">Filter</button>

        </div>

        <div class="col-md-2">
            @*<div class="row">*@
            @*<div class="col-2">
                    <i class="fas fa-search" aria-hidden="true"></i>
                </div>
                <div class="col-10">*@
            <input class="form-control form-control-sm ml-3 w-100" type="text" placeholder="Search" aria-label="Search">
            @*</div>*@
            @*</div>*@
        </div>

        <div class="col-md-1">
            <button class="btn btn-secondary" type="submit">Search</button>
        </div>
    </div>
    <hr />
</form>

